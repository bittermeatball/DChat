{
  "name": "decentrailized-chat-app",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "scripts": {
    "start": "cross-env NODE_ENV=production node -r tsconfig-paths/register -r ts-node build/node-chain.js",
    "build:start": "npm run build && npm run start",
    "build": "rm -rf ./build && tsc",
    "dev": "cross-env NODE_ENV=development nodemon",
    "dev2": "cross-env NODE_ENV=development PORT=3002 P2P_PORT=5002 PEERS=ws://localhost:5001 nodemon",
    "dev3": "cross-env NODE_ENV=development PORT=3003 P2P_PORT=5003 PEERS=ws://localhost:5002,ws://localhost:5001 nodemon",
    "seed": "ts-node src/database/seed.ts",
    "rollback": "ts-node src/database/rollback.ts",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix"
  },
  "dependencies": {
    "crypto-js": "^4.1.1",
    "dotenv": "^10.0.0",
    "elliptic": "^6.5.4",
    "express": "^4.17.1",
    "jsonwebtoken": "^8.5.1",
    "method-override": "^3.0.0",
    "reflect-metadata": "^0.1.13",
    "uuid": "^8.3.2",
    "ws": "^8.2.3"
  },
  "devDependencies": {
    "@types/crypto-js": "^4.0.2",
    "@types/dotenv": "^8.2.0",
    "@types/elliptic": "^6.4.13",
    "@types/express": "^4.17.13",
    "@types/uuid": "^8.3.1",
    "@types/ws": "^8.2.0",
    "@typescript-eslint/eslint-plugin": "^4.28.2",
    "@typescript-eslint/parser": "^4.28.2",
    "cross-env": "^7.0.3",
    "eslint": "^7.30.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^3.4.0",
    "prettier": "^2.3.2",
    "ts-loader": "^9.2.3",
    "ts-node": "^10.0.0",
    "tsconfig-paths": "^3.10.1",
    "typescript": "^4.3.5"
  }
}
